# ========================================
# SPARK PARKING SYSTEM - ENVIRONMENT VARIABLES
# ========================================
# Rename this file to .env and configure accordingly

# ========================================
# DATABASE CONFIGURATION
# ========================================
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASS=rootpassword
DB_NAME=spark

# ========================================
# APPLICATION CONFIGURATION
# ========================================
# Base URL for the application
BASEURL=http://localhost:8080/

# Application name
APP_NAME=SPARK Parking System

# Secret salt for password hashing
SECRET_SALT=your-super-secret-random-string-here

# ========================================
# DOCKER CONFIGURATION (if using docker-compose)
# ========================================
# These will override docker-compose.yml values if set

# Container names
DOCKER_APP_CONTAINER=spark-app
DOCKER_DB_CONTAINER=spark-db
DOCKER_PMA_CONTAINER=spark-pma

# Port mappings
DOCKER_APP_PORT=8080
DOCKER_DB_PORT=3308
DOCKER_PMA_PORT=8081

# ========================================
# LOGGING & DEBUG
# ========================================
# Set to true for development, false for production
DEBUG=false

# Log errors to file (true/false)
LOG_ERRORS=true

# ========================================
# EMAIL CONFIGURATION (Optional)
# ========================================
# For future email notifications
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=465
MAIL_USER=your-email@example.com
MAIL_PASS=your-password

# ========================================
# PAYMENT GATEWAY (Optional)
# ========================================
# For future payment integration
PAYMENT_GATEWAY=midtrans
MIDTRANS_SERVER_KEY=your-key-here
MIDTRANS_CLIENT_KEY=your-key-here
